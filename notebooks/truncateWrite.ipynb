    "import os\n",
    "\n",
    "filename = './exampleFiles/truncateFile.txt'\n",
    "\n",
    "changes = False\n",
    "with open(filename, 'r+') as f:\n",
    "    doc = f.read()\n",
    "    doc = doc.replace('line', '+line')\n",
    "    changes = True\n",
    "\n",
    "    if changes:\n",
    "        f.truncate(0)\n",
    "        f.write(doc)\n"
   ]
